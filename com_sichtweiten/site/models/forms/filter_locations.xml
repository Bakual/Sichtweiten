<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_SICHTWEITEN_FILTER_SEARCH_LABEL"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="state"
			type="status"
			label="COM_SICHTWEITEN_FILTER_STATE_LABEL"
			description="COM_SICHTWEITEN_FILTER_STATE_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="ordering"
			type="list"
			label="COM_SICHTWEITEN_LIST_ORDERING_LABEL"
			description="COM_SICHTWEITEN_LIST_ORDERING_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="location">COM_SICHTWEITEN_LOCATION</option>
		</field>
		<field
			name="direction"
			type="list"
			label="COM_SICHTWEITEN_LIST_DIRECTION_LABEL"
			description="COM_SICHTWEITEN_LIST_DIRECTION_DESCS"
			class="input-mini"
			default="ASC"
			onchange="this.form.submit();"
			>
			<option value="ASC">COM_SICHTWEITEN_DIRECTION_ASC</option>
			<option value="DESC">COM_SICHTWEITEN_DIRECTION_DESC</option>
		</field>
	</fields>
</form>
