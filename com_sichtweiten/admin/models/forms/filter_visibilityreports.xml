<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_SICHTWEITEN_FILTER_SEARCH_DESC"
			description="COM_SICHTWEITEN_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="tauchplatz"
			type="locationlist"
			label="COM_SICHTWEITEN_FILTER_DIVESITE_LABEL"
			description="COM_SICHTWEITEN_FILTER_DIVESITE_DESC"
			layout="joomla.form.field.groupedlist-fancy-select"
			onchange="this.form.submit();"
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_SICHTWEITEN_LIST_ORDERING_LABEL"
			description="COM_SICHTWEITEN_LIST_ORDERING_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JGLOBAL_SORT_BY</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_SICHTWEITEN_LIST_LIMIT_LABEL"
			description="COM_SICHTWEITEN_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
