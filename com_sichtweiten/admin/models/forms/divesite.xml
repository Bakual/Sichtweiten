<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="general">
		<field
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>
		<field
			name="name"
			type="text"
			label="JGLOBAL_TITLE"
		/>
		<field
			name="gewaesser_id"
			type="sql"
			label="COM_SICHTWEITEN_FIELD_GEWAESSER_LABEL"
			key_field="id"
			value_field="name"
			query="SELECT name, id FROM #__sicht_gewaesser ORDER BY name ASC"
			layout="joomla.form.field.list-fancy-select"
		>
			<option value="">COM_SICHTWEITEN_FILTER_GEWAESSER_SELECT</option>
		</field>
		<field
			name="ort_id"
			type="sql"
			label="COM_SICHTWEITEN_FIELD_ORT_LABEL"
			key_field="id"
			value_field="name"
			query="SELECT name, id FROM #__sicht_ort ORDER BY name ASC"
			layout="joomla.form.field.list-fancy-select"
		>
			<option value="">COM_SICHTWEITEN_FILTER_ORT_SELECT</option>
		</field>
		<field
			name="active"
			type="radio"
			label="JSTATUS"
			layout="joomla.form.field.radio.switcher"
		>
			<option value="0">JUNPUBLISHED</option>
			<option value="1">JPUBLISHED</option>
		</field>
		<field
			name="bemerkungen"
			type="textarea"
			label="COM_SICHTWEITEN_FIELD_BEMERKUNGEN_LABEL"
			rows="5"
			class="input-xxlarge"
		/>
		<field
			name="version"
			type="text"
			label="COM_SICHTWEITEN_FIELD_VERSION_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
		/>

		<field
			name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			maxlength="255"
		/>
	</fieldset>
	<fieldset name="divesite_subform">
		<field
			name="altnames"
			type="subform"
			label="COM_SICHTWEITEN_FIELD_DIVESITE_SUBFORM_LABEL"
			formsource="divesite_subform"
			multiple="true"
			hidden="true"
		/>
	</fieldset>
</form>
