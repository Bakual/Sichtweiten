<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_SICHTWEITEN_FILTER_SEARCH_DESC"
			description="COM_SICHTWEITEN_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_SICHTWEITEN_LIST_ORDERING_LABEL"
			description="COM_SICHTWEITEN_LIST_ORDERING_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="s.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="s.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="s.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="s.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="s.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="s.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_SICHTWEITEN_LIST_LIMIT_LABEL"
			description="COM_SICHTWEITEN_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
