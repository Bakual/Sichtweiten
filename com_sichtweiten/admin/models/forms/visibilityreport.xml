<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="general">
		<field
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			class="readonly"
			size="10"
			default="0"
			readonly="true"
		/>
		<field
			name="datum"
			type="calendar"
			label="JDATE"
			translateformat="true"
		/>
		<field
			name="tauchplatz_id"
			type="locationlist"
			label="COM_SICHTWEITEN_FIELD_TAUCHPLATZ_LABEL"
			layout="joomla.form.field.groupedlist-fancy-select"
			required="true"
		/>
		<field
			name="user_id"
			type="userlist"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
		/>
		<field
			name="meldedatum"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			translateformat="true"
		/>
		<field
			name="kommentar"
			type="textarea"
			label="COM_SICHTWEITEN_FIELD_KOMMENTAR_LABEL"
			rows="5"
			class="input-xxlarge"
		/>
	</fieldset>
</form>
